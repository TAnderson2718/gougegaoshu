{
  // Augment 浏览器会话管理
  "augment.browser.sessionMode": true,
  "augment.browser.createDedicatedWindow": true,
  "augment.browser.reuseSessionWindow": true,
  "augment.browser.defaultBrowser": "chrome",
  "augment.browser.sessionWindowOptions": {
    "width": 1400,
    "height": 900,
    "x": 200,
    "y": 100,
    "title": "Augment Debug Session"
  },
  
  // 环境变量 - 使用干净浏览器管理器
  "terminal.integrated.env.osx": {
    "BROWSER": "./scripts/clean-browser.sh"
  },
  "terminal.integrated.env.linux": {
    "BROWSER": "./scripts/clean-browser.sh"
  },
  "terminal.integrated.env.windows": {
    "BROWSER": "./scripts/clean-browser.sh"
  }
}
